<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.digitechlab.skystatus.FragmentTwo"
    android:layout_margin="5dp"
    android:id="@+id/fragment1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/current_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:text="Loading..."/>


    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/imageView2"
        android:text="Fetching Weather Report.." />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weather2"
        android:layout_below="@+id/current_details"
        android:layout_gravity="center"
        android:layout_alignLeft="@+id/details"
        android:layout_alignStart="@+id/details" />

</RelativeLayout>
