<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="7"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="DATE and TIME"
        android:layout_weight="2"/>

    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/date_time"
        android:layout_toRightOf="@+id/date_time"
        android:layout_weight="2"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/forecast_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/max_min"
        android:layout_toStartOf="@+id/max_min"
        android:layout_weight="3"
        android:paddingLeft="8dp"
        android:text="FORECAST DETAILS" />

</LinearLayout>